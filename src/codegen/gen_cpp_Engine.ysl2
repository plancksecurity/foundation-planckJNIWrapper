            JNIEXPORT jobject JNICALL Java_foundation_pEp_jniadapter_Engine__1group_1create(JNIEnv *env,
                                                                                        jobject obj,
                                                                                        jobject group_identity,
                                                                                        jobject manager,
                                                                                        jobject member_ident_list)
            {
                std::mutex *mutex_local = nullptr;
                {
                    std::lock_guard<std::mutex> l(global_mutex);
                    pEpLog("called with lock_guard");
                    mutex_local = get_engine_java_object_mutex(env, obj);
                }
                std::lock_guard<std::mutex> l(*mutex_local);

                pEp_identity *_group_identity = to_identity(env, group_identity);
                pEp_identity *_manager = to_identity(env, manager);
                identity_list *_member_ident_list = to_identitylist(env, member_ident_list);
                //pEp_group *_group = to_group(env, group);
                pEp_group *_group = new_group(_group_identity, NULL, NULL);


                PEP_STATUS status = passphraseWrap(::group_create, session(),_group_identity,_manager,_member_ident_list, &_group);

                if (status != PEP_STATUS_OK) {
                    throw_pEp_Exception(env, status);
                    return (jobject) NULL;
                }
                return from_group(env, _group);
            }

